<!DOCTYPE html>
<html lang="{{lang}}">

<head>
	{{>views/partials/head-common-partial}}
	<title>{{i18n "main.pagetitle"}}</title>
</head>

<body class="main js-load-gadgets">
	<header>
		<div class="logo">
			<a href="/{{lang}}">
				<picture>
					<source srcset="/assets/img/hsg-logo-{{lang}}.svg" type="image/svg+xml" media="(min-width: 769px)">
					<source srcset="/assets/img/hsg-logo-small.svg" type="image/svg+xml" media="(max-width: 768px)">
					<img src="/assets/img/hsg-logo-{{lang}}.svg" alt="{{i18n " common.hsglibrary"}}">
				</picture>
			</a>
		</div>
		<nav>
			<div id="search">
				<label for="js-search-input" class="hide">{{i18n "common.search"}}</label>
				<input type="text" placeholder="{{i18n "common.search"}}" id="js-search-input" />
				<span id="js-search-button" class="search">
					<i class="fa fa-fw fa-search" aria-hidden="true"></i>
				</span>
			</div>
			<ul>
				<li class="{{lang}}">
					<a class="lang-switch de clickable" href="/de">
						DE
					</a>
					<a class="lang-switch en clickable" href="/en">
						EN
					</a>
				</li>
				<li>
					<a class="clickable info" href="/{{lang}}/info" title="info">
						<i class="fa fa-fw fa-info" aria-hidden="true"></i>
					</a>
				</li>
			</ul>
		</nav>
	</header>
	<main>
		<h1 class="visuallyHidden" aria-label="Gadgets">Gadgets</h1>
		{{>views/partials/loader-partial}}
		<ul id="items" class="js-items">
			<!-- inject items here -->
		</ul>
		<div id="js-error" class="error hide">
			<h2>{{i18n "main.errortitle"}}</h2>
			<p>
				{{i18n "main.errormsg"}}
			</p>
		</div>
	</main>
	{{>views/partials/footer-common-partial}}
</body>

</html>
